prefix=@prefix@
PKGDATAHOME=~/.local/share/ibus-hiragana
mkdir -p $PKGDATAHOME
export TMPDIR=~/.local/share/ibus-hiragana/tmp
mkdir -p $TMPDIR
@PYTHON@ -m venv --system-site-packages $PKGDATAHOME/venv
source $PKGDATAHOME/venv/bin/activate
echo "Installing requirements"
read MAJOR MINOR < <(python -c 'import sys; print(sys.version_info.major, sys.version_info.minor)')
python -m pip install -r @prefix@/share/ibus-hiragana/requirements.txt
if [ "$MAJOR" -gt 3 ] || { [ "$MAJOR" -eq 3 ] && [ "$MINOR" -ge 14 ]; }; then
    python -m pip install --pre torch --index-url https://download.pytorch.org/whl/nightly/cu126
else
    python -m pip install torch
fi
python -m pip install transformers[torch]==4.57.0
python <<EOF
from transformers import AutoModelForMaskedLM, AutoTokenizer
MODEL_NAME = 'cl-tohoku/bert-base-japanese-v3'
try:
    print(f'Retrieving "{MODEL_NAME}" from huggingface.co and cache')
    model = AutoModelForMaskedLM.from_pretrained(MODEL_NAME)
    tokenizer = AutoTokenizer.from_pretrained(MODEL_NAME, clean_up_tokenization_spaces=True)
except OSError:
    pass
EOF
deactivate
rm -rf $TMPDIR
echo "Done"
