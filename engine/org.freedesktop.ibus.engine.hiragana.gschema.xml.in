<?xml version=\"1.0\" encoding=\"utf-8\"?>
<schemalist>
  <schema id='org.freedesktop.ibus.engine.hiragana' path='/org/freedesktop/ibus/engine/hiragana/'>
    <key name='mode' type='s'>
      <choices>
        <choice value='A'/>
        <choice value='あ'/>
        <choice value='ア'/>
        <choice value='Ａ'/>
        <choice value='ｱ'/>
      </choices>
      <default>\"A\"</default>
      <summary>Input Mode</summary>
      <description>
        The current input mode.
      </description>
    </key>
    <key name='delay' type='i'>
      <range min='0' max='50'/>
      <default>0</default>
      <summary>Delay for Non-modifier Keys</summary>
      <description>
        The amount of time in milliseconds to delay before processing non-modifier keys;
        this setting should be changed only with Nicola layouts and their variants.
      </description>
    </key>
    <key name='dictionary' type='s'>
      <default>\"${pkgdatadir}/restrained.dic\"</default>
      <summary>Kanji Dictionary File</summary>
      <description>
        The pathname to the Kanji dictionary file.
      </description>
    </key>
    <key name='user-dictionary' type='s'>
      <default>\"my.dic\"</default>
      <summary>User Kanji Dictionary File</summary>
      <description>
        The filename of the user Kanji dictionary file.
      </description>
    </key>
    <key name='layout' type='s'>
      <default>\"${pkgdatadir}/layouts/roomazi.json\"</default>
      <summary>Keyboard Layout File</summary>
      <description>
        The pathname to the keyboard layout design file.
      </description>
    </key>
    <key name='nn-as-jis-x-4063' type='b'>
      <default>true</default>
      <summary>Convert 'nn' to 'ん'</summary>
      <description>
        If enabled, 'nn' is converted to 'ん' following deprecated JIS X 4063.
        If disabled, 'nn' will be processed following ISO 3602.
      </description>
    </key>
    <key name='logging-level' type='s'>
      <choices>
        <choice value='CRITICAL'/>
        <choice value='ERROR'/>
        <choice value='WARNING'/>
        <choice value='INFO'/>
        <choice value='DEBUG'/>
        <choice value='NOTSET'/>
      </choices>
      <default>\"WARNING\"</default>
      <summary>Logging Level</summary>
      <description>
        The logging level for the logfile '~/.local/share/${PACKAGE}/${PACKAGE}.log'.
      </description>
    </key>
  </schema>
</schemalist>
